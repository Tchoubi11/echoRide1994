{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Inscription</h1>

    <div class="card p-4 shadow-sm">
        {{ form_start(registrationForm) }}

        {% if registrationForm.vars.errors|length > 0 %}
    <div class="alert alert-danger">
        {% for error in registrationForm.vars.errors %}
            <p>{{ error.message }}</p>
        {% endfor %}
    </div>
{% endif %}


        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {{ form_widget(registrationForm) }}

        <button type="submit" class="btn btn-primary w-100">S'inscrire</button>
        {{ form_end(registrationForm) }}

        <div class="text-center mt-3">
            <p>Vous avez déjà un compte ?</p>
            <a href="{{ path('app_login') }}" class="btn btn-secondary">Se connecter</a>
        </div>
    </div>
    <div class="text-center mt-3">
        <a href="{{ path('app_home') }}" class="btn btn-outline-primary">⬅ Retour à l'accueil</a>
    </div>
</div>
{% endblock %}
