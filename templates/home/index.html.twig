{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>Bienvenue sur EcoRide</h1>
        <p>La plateforme de covoiturage écologique et économique</p>

        <!-- Carrousel d'images et descriptions (Diaporama en haut de la page) -->
        <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <!-- Première diapositive : Réduire l'empreinte carbone -->
                <div class="carousel-item active">
                    <img src="{{ asset('uploads/images/67c0e83e9bf87.jpg') }}" class="d-block w-100 img-fluid" alt="Réduire l'empreinte carbone">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Réduisez votre empreinte carbone</h5>
                        <p>Avec EcoRide, chaque trajet participe à un avenir plus vert !</p>
                    </div>
                </div>
                <!-- Deuxième diapositive : Voyagez à petit prix -->
                <div class="carousel-item">
                    <img src="{{ asset('uploads/images/67c0e85b22232.jpg') }}" class="d-block w-100 img-fluid" alt="Voyagez à petit prix">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Voyagez à petit prix</h5>
                        <p>Des solutions économiques pour vos déplacements quotidiens.</p>
                    </div>
                </div>
                <!-- Troisième diapositive : Covoiturage facilité -->
                <div class="carousel-item">
                    <img src="{{ asset('uploads/images/67c1afcb57201.jpg') }}" class="d-block w-100 img-fluid" alt="Covoiturage facilité">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Covoiturez en toute simplicité</h5>
                        <p>Des trajets faciles à trouver, des conducteurs et passagers prêts à partager.</p>
                    </div>
                </div>
            </div>
            <!-- Contrôles du carrousel -->
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- Formulaire de recherche de covoiturage -->
        <div class="mt-5">
            <h2>Trouver un covoiturage</h2>
            {{ form_start(form) }}
                {{ form_row(form.departure) }}
                {{ form_row(form.destination) }}
                {{ form_row(form.date) }}
                <button type="submit" class="btn btn-primary">Rechercher</button>
            {{ form_end(form) }}
        </div>

        <!-- Affichage des résultats de recherche -->
        {% if covoiturages is not empty %}
            <h3>Covoiturages disponibles</h3>
            <ul class="list-group mt-4">
                {% for covoiturage in covoiturages %}
                    <li class="list-group-item">
                        <p><strong>{{ covoiturage.driver.username }}</strong> ({{ covoiturage.driver.rating }} ⭐)</p>
                        <p>Départ : {{ covoiturage.departure }} -> Arrivée : {{ covoiturage.destination }}</p>
                        <p>Place restante : {{ covoiturage.remainingSeats }}</p>
                        <p>Prix : {{ covoiturage.price }} €</p>
                        <p>Date et heure : {{ covoiturage.departureTime|date('d-m-Y H:i') }} -> {{ covoiturage.arrivalTime|date('d-m-Y H:i') }}</p>
                        <p>{{ covoiturage.ecological ? 'Covoiturage écologique' : 'Covoiturage standard' }}</p>
                        <a href="{{ path('covoiturage_detail', {'id': covoiturage.id}) }}" class="btn btn-info">Détail</a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun covoiturage trouvé pour ces critères.</p>
        {% endif %}
    </div>

    <!-- Trois images en bas de la page pour décrire l'entreprise -->
    <div class="container mt-5">
        <h2>Notre Mission</h2>
        <div class="row">
            <div class="col-md-4">
                <img src="{{ asset('uploads/images/67c0e8723e8e5.jpg') }}" class="img-fluid" alt="Mission écologique">
                <p class="text-center">Réduire l'empreinte carbone avec des trajets partagés.</p>
            </div>
            <div class="col-md-4">
                <img src="{{ asset('uploads/images/67c0e8854ca31.jpg') }}" class="img-fluid" alt="Voyage économique">
                <p class="text-center">Offrir des solutions économiques pour vos déplacements.</p>
            </div>
            <div class="col-md-4">
                <img src="{{ asset('uploads/images/67c0e8993dfef.jpg') }}" class="img-fluid" alt="Communauté EcoRide">
                <p class="text-center">Créer une communauté de conducteurs et passagers écoresponsables.</p>
            </div>
        </div>
    </div>
{% endblock %}
