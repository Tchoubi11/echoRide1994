<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}EcoRide - Covoiturage écologique{% endblock %}</title>
    
    <!-- Lien vers le fichier CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

    
    {% block stylesheets %}
    <link href="{{ asset('styles.css') }}" rel="stylesheet">  
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    {% endblock %}
</head>
<body>
    <header>
        <!-- Menu de navigation -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="{{ path('app_home') }}">EcoRide</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('covoiturage_list') }}">Covoiturages</a>
                        </li>
                        
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('espace_utilisateur') }}">Mon espace</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                            </li>
                        {% endif %}
                    
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>    
        </nav>
        
    </header>

    <main>
        {% block body %}{% endblock %}
    </main>

    <!-- Bas de page avec adresse et mentions légales -->
    <footer class="mt-5">
        <div class="d-flex justify-content-between">
            <p><strong>Contact :</strong> contact@ecoride.com</p>
            <p><a href="{{ path('legal_mentions') }}">Mentions légales</a></p>
        </div>
    </footer>

    {% block javascripts %}
    <script src="{{ asset('scripts/delate.js') }}"></script>
    <script src="{{ asset('scripts/passager.js') }}"></script>
    <script src="{{ asset('scripts/dateValidation.js') }}"></script>
    <script src="{{ asset('scripts/home.js') }}"></script>

    {% endblock %}

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
