{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>Recherche de Covoiturages</h1>
        <p>Veuillez remplir le formulaire pour rechercher des covoiturages disponibles.</p>

        <!-- Formulaire de recherche de covoiturage -->
        <div class="mt-5">
            <h2>Trouver un covoiturage</h2>
            {{ form_start(form) }}
            
            <!-- Départ -->
            {{ form_row(form.departure) }}
            {% for error in form.departure.vars.errors %}
                <div class="alert alert-danger">{{ error.message }}</div>
            {% endfor %}
            
            <!-- Destination -->
            {{ form_row(form.destination) }}
            {% for error in form.destination.vars.errors %}
                <div class="alert alert-danger">{{ error.message }}</div>
            {% endfor %}
            
            <!-- Date -->
            {{ form_row(form.date) }}
            {% for error in form.date.vars.errors %}
                <div class="alert alert-danger">{{ error.message }}</div>
            {% endfor %}
        
            <!-- Nombre de personnes pour le covoiturage -->
            <div class="form-group">
                <label for="num_people">
                    <i class="fas fa-users" id="toggle-passenger" style="cursor: pointer;"></i> Nombre de passagers
                </label>
                <div class="input-group" id="passenger-controls" style="display: none;">
                    
                    <button type="button" class="btn btn-outline-secondary" id="decrement">-</button>
                    <input type="number" class="form-control" id="num_people" name="num_people" value="1" min="1" max="10" readonly>
                    <button type="button" class="btn btn-outline-secondary" id="increment">+</button>
                </div>
                <div class="invalid-feedback" id="num_people_error" style="display: none;">Le nombre de passagers ne peut pas être inférieur à 1.</div>
            </div>
            
            <button type="submit" class="btn btn-primary mt-3">Rechercher</button>
            
            {{ form_end(form) }}
        </div>
        
        
        <script src="{{ asset('scripts/passager.js') }}"></script>
        
        
        {% if rides is not empty %}
            <h3>Résultats de la recherche</h3>
            <div class="row">
                {% for ride in rides %}
                    <div class="col-md-4">
                        <div class="card">
                            <img src="{{ asset('uploads/images/' ~ ride.driver.profile_picture) }}" class="card-img-top" alt="Photo du conducteur">
                            <div class="card-body">
                                <h5 class="card-title">{{ ride.driver.pseudo }}</h5>
                                <p class="card-text">Note : {{ ride.driver.rating }}</p>
                                <p>Places restantes : {{ ride.available_seats }}</p>
                                <p>Prix : {{ ride.price }} €</p>
                                <p>Date : {{ ride.departure_time|date('d/m/Y') }}</p>
                                <p>Heure de départ : {{ ride.departure_time|date('H:i') }}</p>
                                <p>Heure d'arrivée : {{ ride.arrival_time|date('H:i') }}</p>
                                <p>
                                    {% if ride.is_ecological %}
                                        <span class="badge bg-success">Voyage écologique</span>
                                    {% else %}
                                        <span class="badge bg-danger">Non écologique</span>
                                    {% endif %}
                                </p>
                                <a href="{{ path('ride_details', {'id': ride.id}) }}" class="btn btn-info">Détail</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            {% if nextRide %}
                <p>Aucun covoiturage trouvé pour cette date. Voulez-vous modifier la date à {{ nextRide.departure_time|date('d/m/Y') }} ?</p>
            {% else %}
                <p>Aucun covoiturage trouvé pour ces critères.</p>
            {% endif %}
        {% endif %}
    </div>
{% endblock %}
