{% extends 'base.html.twig' %}
{% block title %}Télécharger une image{% endblock %}

{% block body %}
    <h1>Télécharger une image</h1>
    <p>Type d'image: {{ type == 'profil' ? 'Photo de profil' : 'Autre image' }}</p>

    {{ form_start(form) }}
        {{ form_row(form.imageFile) }}
        {{ form_row(form._token) }}  
        <button class="btn btn-primary">Envoyer</button>
    {{ form_end(form) }}
    <div><a href="{{ path('app_home') }}" class="btn btn-primary">
        ⬅ Retour à l'accueil
    </a>
    </div>
{% endblock %}
